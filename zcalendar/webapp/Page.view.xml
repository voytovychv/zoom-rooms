<mvc:View
	controllerName="com.eae.zplanner.Page"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:unified="sap.ui.unified"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.f"
	xmlns="sap.m" height="100%">

<f:DynamicPage >

<f:header>
	<f:DynamicPageHeader pinnable="true">
		<DatePicker
			id="DP1"
			placeholder="Enter Date" valueFormat="yyyy-MM-dd" displayFormat="long"
			change="handleCalendarSelect"
			class="sapUiSmallMarginBottom"/>
	</f:DynamicPageHeader>
	</f:header>
		<f:content>
		<Table
			id="timeSlotTable"
			headerText="Appointments"
			items="{
				path:'/TimeSlots',
					parameters : {
					$orderby : 'start',
					$expand: 'to_bookings'
				},
				events : {dataReceived : '.onDataEvents', dataRequested: '.dataRequested'},
				factory: '.buildItems'
			}" 
			>
		</Table>
		</f:content>
	</f:DynamicPage>
</mvc:View>
